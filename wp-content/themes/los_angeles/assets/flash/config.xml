<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
	<settings>
		<auto_play>
			<defaults symbol="linear"/>
			<tweenIn x="25" y="275" width="540" height="7" tint="0xFFFFFF" alpha="0"/>
			<tweenOver alpha="1" height="7"/>
		</auto_play>
		
    	<prev_button>
			<defaults round_corners="5,5,5,5"/>
			<tweenOver tint="0xFFFFFF" scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</prev_button>
		
    	<prev_symbol>
			<tweenOver tint="0x000000" />			
		</prev_symbol>
		
    	<next_button>
			<defaults round_corners="5,5,5,5"/>			
			<tweenOver tint="0xFFFFFF"  scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</next_button>
		
    	<next_symbol>
			<tweenOver tint="0x000000" />
		</next_symbol>	
			
	</settings>    

	<slides>
	
        <slide>
            <url>http://localhost/flipfoundry/wp-content/uploads/2013/01/banner1a.jpg</url>
        </slide>
		<!-- changing transition between first & second slide -->
        <transition num="7" slicing="vertical" direction="down"/>
        <slide>
       		<url>http://localhost/flipfoundry/wp-content/uploads/2013/01/banner2a.jpg</url>
        </slide>		
		<!-- changing transition between second & third slide -->
        <transition num="5" direction="right" shader="flat" />
		<slide>
            <url>http://localhost/flipfoundry/wp-content/uploads/2013/01/banner3a.jpg</url>
        </slide>
				
	</slides>
</cu3er>

